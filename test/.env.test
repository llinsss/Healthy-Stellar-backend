# Test Environment Configuration
# This file is used for running tests only

# Node Environment
NODE_ENV=test

# Test Database Configuration (PostgreSQL for E2E tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USERNAME=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=healthy_stellar_test

# Disable SSL for test database
DB_SSL_ENABLED=false

# JWT Configuration (use simple secrets for tests)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=test-refresh-secret-key-for-testing-only
REFRESH_TOKEN_EXPIRATION=7d

# Encryption (use test key - NOT for production)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
PHI_ENCRYPTION_KEY=test-phi-encryption-key-minimum-32-characters

# HIPAA Compliance (enabled for testing)
HIPAA_COMPLIANCE_ENABLED=true
ENABLE_FIELD_LEVEL_ENCRYPTION=false
ENABLE_ACCESS_LOGGING=true
ENABLE_DETAILED_AUDIT=true

# Session Configuration
SESSION_TIMEOUT_MINUTES=15
MAX_SESSIONS_PER_USER=5

# Logging (minimal for tests)
LOG_LEVEL=error
ENABLE_AUDIT_LOGGING=true

# Performance Test Thresholds (in milliseconds)
PERF_PATIENT_LOOKUP_THRESHOLD=100
PERF_RECORD_RETRIEVAL_THRESHOLD=500
PERF_RECORD_CREATION_THRESHOLD=200

# Test Data Configuration
TEST_DATA_SEED=12345
USE_DETERMINISTIC_DATA=true

# Disable rate limiting in tests
RATE_LIMIT_ENABLED=false
